wait_on_devices() {
  for dev in ${NETWORK_INTERFACES[@]}; do
    if ip link | grep -Fq $dev; then :; else
        echo_color 3 "waiting for $dev to settle..."
        for i in $(seq 5); do
          ip link | grep -Fq $dev && break
          sleep 1
        done
    fi
  done
}

start() {
  wait_on_devices
  dhcpcd -nqb
}

stop() {
  dhcpcd -k
}

restart() {
  start
  stop
}

poll() {
  pgrep dhcpcd > /dev/null 2>&1
}
